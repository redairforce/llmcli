{
  "mcpServers": {
    "wikijs": {
      "command": "/config/.npm-global/bin/wikijs-mcp",
      "args": ["server"],
      "env": {
        "WIKIJS_API_URL": "${WIKIJS_API_URL}",
        "WIKIJS_TOKEN": "${WIKIJS_TOKEN}",
        "LOG_LEVEL": "INFO"
      }
    },
    "playwright-mcp-server": {
      "command": "/config/.npm-global/bin/playwright-mcp-server",
      "args": []
    },
    "homarr-mcp": {
      "command": "node",
      "args": ["/appdata/projects/homarr-mcp/dist/index.js"],
      "env": {
        "HOMARR_BASE_URL": "https://homarr.williamchambless.com",
        "HOMARR_API_KEY": "${HOMARR_API_KEY}"
      }
    },
    "zen": {
      "command": "python3",
      "args": ["/opt/zen-mcp-server/server.py"],
      "env": {
        "PYTHONPATH": "/opt/zen-mcp-server"
      }
    },
    "mcp-server-kubernetes": {
      "command": "/config/.npm-global/bin/mcp-server-kubernetes",
      "args": []
    },
    "repomix": {
      "command": "repomix",
      "args": ["--mcp"]
    },
    "desktop-commander": {
      "command": "npx",
      "args": ["-y", "@wonderwhy-er/desktop-commander@latest"]
    },
    "perplexity-ask": {
      "command": "/config/.npm-global/bin/mcp-server-perplexity-ask",
      "args": []
    },
    "github": {
      "command": "/usr/local/bin/github-mcp-server",
      "args": ["stdio"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "postgres-mcp": {
      "command": "/config/.local/bin/postgres-mcp",
      "args": ["--access-mode=unrestricted"],
      "env": {
        "DATABASE_URI": "postgresql://${POSTGRES_USERNAME}:${POSTGRES_PASSWORD}@postgresql.arr.svc.cluster.local:5432/postgres"
      }
    },
    "context7": {
      "command": "/config/.npm-global/bin/context7-mcp",
      "args": [],
      "env": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      }
    }
  }
}